        focused_workspace  #000e10 #001f33 #33AA00
        active_workspace   #000e10 #000e10 #33AA00
        inactive_workspace #000e10 #000e10 #33AA00
        urgent_workspace   #000e10 #000e10 #33AA00
        binding_mode       #000e10 #000e10 #33AA00
    }
}

